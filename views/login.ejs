    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Times New Roman', Times, serif;
            background-color: #f0f0f0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            font-size: 16px;
        }

        .login-page {
            display: flex;
            width: 90vw;
            max-width: 1150px;
            min-height: 600px;
            background-color: #ffffff;
            box-shadow: 0px 20px 20px rgba(0, 0, 0, 0.15);
            border-radius: 50px;
            overflow: hidden;
        }

        .login-image {
            flex: 1;
            background: url('/uploads/logo.png') no-repeat center center;
            background-size: cover;
            min-height: 200px;
        }

        .login-container {
            flex: 1;
            padding: 5vh 5vw;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        h2 {
            color: #003366;
            text-align: center;
            margin-bottom: 2vh;
            font-size: 2em;
            white-space: nowrap;
            /* Ngăn xuống dòng */
            overflow: hidden;
            /* Ẩn nội dung vượt quá */
            text-overflow: ellipsis;
            /* Hiển thị dấu ... nếu bị cắt */
        }

        .subtitle {
            text-align: center;
            color: #666;
            margin-bottom: 6vh;
            font-size: 0.9em;
        }

        form div {
            margin-bottom: 2vh;
        }

        .input-wrapper {
            position: relative;
            display: flex;
            align-items: center;
        }

        .input-wrapper.input-focus .input-icon,
        .input-wrapper.input-focus .toggle-password {
            color: red;
        }

        .input-icon,
        .toggle-password {
            position: absolute;
            color: #999;
            font-size: 1.1em;
            transition: color 0.3s ease;
        }

        .input-icon {
            left: 10px;
        }

        .toggle-password {
            right: 10px;
            cursor: pointer;
        }

        input[type="text"],
        input[type="password"] {
            width: 100%;
            padding: 12px 40px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 1.2em;
            transition: border-color 0.3s ease;
        }

        button {
            font-family: 'Times New Roman', Times, serif;
            width: 100%;
            padding: 10px;
            background-color: #003366;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 1.2em;
            transition: background-color 0.3s ease;
        }

        input[type="text"]:focus,
        input[type="password"]:focus {
            outline: none;
            border-color: #0066cc;
            /* Màu viền khi focus */
            box-shadow: 0 0 5px rgba(0, 102, 204, 0.5);
            /* Thêm hiệu ứng bóng khi focus */
        }

        .footer-text {
            text-align: center;
            margin-top: 3vh;
            font-size: 0.9em;
            color: #666666;
        }

        .cat-icon {
            display: block;
            margin: 3vh auto 0;
            width: 80px;
            max-width: 100%;
            margin-top: 40px;
        }

        .cat-icon img {
            width: 100%;
            height: auto;
        }

        .cat-icon p {
            font-size: 0.7em;
            color: #666;
            margin-top: 10px;
            text-align: center;
        }

        @media (max-width: 768px) {
