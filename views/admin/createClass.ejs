<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/uploads/MC2.png" type="image/x-icon">
    <title>Tạo Lớp Mới</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f0f4f8;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }
        .create-class-container {
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 2rem;
            width: 100%;
            max-width: 500px;
        }
        h2 {
            color: #2c3e50;
            text-align: center;
            margin-bottom: 1.5rem;
        }
        form {
            display: grid;
            gap: 1rem;
        }
        label {
            font-weight: bold;
            color: #34495e;
            margin-bottom: 0.25rem;
            display: block;
        }
        input {
            width: 100%;
            padding: 0.5rem;
            border: 1px solid #bdc3c7;
            border-radius: 4px;
            font-size: 1rem;
        }
        input:focus {
            outline: none;
            border-color: #3498db;
            box-shadow: 0 0 0 2px rgba(52, 152, 219, 0.2);
        }
        .modal {
            display: none; /* Ẩn modal theo mặc định */
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0, 0, 0, 0.5);
        }
        
        .modal-content {
            background-color: #ffffff;
            margin: 15% auto;
            padding: 20px;
            border: 1px solid #888;
            border-radius: 8px;
            width: 80%;
            max-width: 400px;
            text-align: center;
        }
        
        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }
        
        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }
        
        .modal-icon {
            font-size: 40px;
            margin-bottom: 15px;
        }
        
        .success {
            color: #2ecc71; /* Màu xanh lá cho thông báo thành công */
        }
        
        .error {
            color: #e74c3c; /* Màu đỏ cho thông báo lỗi */
        }
        
        button {
            background-color: #3498db;
            color: white;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }
        
        button:hover {
            background-color: #2980b9;
        }
        
        
    </style>
</head>
<body>
    <div class="create-class-container">
        <h2>Tạo lớp mới</h2>
        <form action="/admin/create-class" method="POST">
            <div>
              <label for="classCode">Mã lớp:</label>
              <input type="text" id="classCode" name="classCode" required>
            </div>
            <div>
              <label for="className">Tên lớp:</label>
              <input type="text" id="className" name="className" required>
            </div>
            <button type="submit">Tạo lớp</button>
          </form>
          
        <!-- Modal for notifications -->
<div id="notificationModal" class="modal">
    <div class="modal-content">
        <span class="close" onclick="closeModal()">&times;</span>
        <div id="modalIcon" class="modal-icon"></div>
        <h3 id="modalTitle"></h3>
        <p id="modalMessage"></p>
        <button onclick="closeModal()">Đóng</button>
    </div>
</div>

    </div>

    <script>

        const message = '<%= typeof message !== "undefined" ? message : "" %>'; // Sử dụng typeof để kiểm tra
        const type = '<%= typeof type !== "undefined" ? type : "info" %>'; // Gán giá trị mặc định cho type

        if (message) {
            showModal(type === 'success' ? 'Thành Công' : 'Lỗi', message, type);
            // Tự động chuyển hướng sau 2 giây
            // Tự động chuyển hướng sau 2 giây nếu là thông báo thành công
            if (type === 'success') {
                setTimeout(() => {
                    window.location.href = '/admin/dashboard';
                }, 2000); // 2000 milliseconds = 2 seconds
            }
        }


        function showModal(title, message, type) {
            const modal = document.getElementById("notificationModal");
            const modalTitle = document.getElementById("modalTitle");
            const modalMessage = document.getElementById("modalMessage");
            const modalIcon = document.getElementById("modalIcon");
        
            modalTitle.innerText = title;
            modalMessage.innerText = message;
        
            // Thay đổi icon và kiểu theo loại thông báo
            if (type === 'success') {
                modalIcon.innerHTML = '✅'; // Thêm icon thành công
                modal.classList.add('success');
            } else if (type === 'error') {
                modalIcon.innerHTML = '❌'; // Thêm icon lỗi
                modal.classList.add('error');
            }
        
            modal.style.display = "block"; // Hiển thị modal
        }
        
        function closeModal() {
            const modal = document.getElementById("notificationModal");
            modal.style.display = "none"; // Ẩn modal
        }
        
    </script>
</body>
</html>