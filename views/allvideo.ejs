<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tất Cả Video - Lớp <%= className %></title>
    <link rel="icon" href="/uploads/MC2.png" type="image/x-icon">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #3498db;
            --secondary-color: #2980b9;
            --background-color: #ecf0f1;
            --text-color: #34495e;
            --card-background: #ffffff;
            --shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            --delete-color: #e74c3c;
        }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: var(--background-color);
            color: var(--text-color);
            line-height: 1.6;
            margin: 0;
            padding: 0;
        }
        .container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 2rem;
        }
        h1 {
            color: var(--primary-color);
            text-align: center;
            margin-bottom: 2rem;
            font-size: 2.5rem;
        }
        .video-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 2rem;
        }
        .video-card {
            background-color: var(--card-background);
            border-radius: 8px;
            overflow: hidden;
            box-shadow: var(--shadow);
            transition: transform 0.3s ease;
        }
        .video-card:hover {
            transform: translateY(-5px);
        }
        .video-embed {
            position: relative;
            padding-bottom: 56.25%; /* 16:9 Aspect Ratio */
            height: 0;
            overflow: hidden;
        }
        .video-embed iframe {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }
        .video-info {
            padding: 1rem;
        }
        .video-title {
            font-size: 1.2rem;
            font-weight: bold;
            margin-bottom: 0.5rem;
        }
        .video-date {
            font-size: 0.9rem;
            color: #7f8c8d;
        }
        .no-videos {
            text-align: center;
            font-style: italic;
            color: #95a5a6;
            font-size: 1.2rem;
            margin-top: 2rem;
        }
        .delete-btn {
            background-color: var(--delete-color);
            color: white;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }
        .delete-btn:hover {
            background-color: #c0392b;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Danh Sách Video - Lớp <%= className %></h1>
        
        <% if (videos.length > 0) { %>
            <div class="video-grid">
                <% videos.forEach(video => { %>
                    <div class="video-card" data-id="<%= video.id %>">
                        <div class="video-embed">
                            <iframe src="<%= video.linkvideo.replace('watch?v=', 'embed/') %>" frameborder="0" allowfullscreen></iframe>
                        </div>
                        <div class="video-info">
                            <div class="video-title"><%= video.namevideo %></div>
                            <div class="video-date">
                                <i class="far fa-calendar-alt"></i>
                                <%= new Date(video.upload_date).toLocaleDateString('vi-VN', { year: 'numeric', month: 'long', day: 'numeric' }) %>
                            </div>
                            <button class="delete-btn" onclick="deleteVideo('<%= video.namevideo %>', '<%= video.linkvideo %>')">Xóa</button>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <p class="no-videos">Không có video nào cho lớp này.</p>
        <% } %>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.1/axios.min.js"></script>
    <script>
        const className = '<%= className %>'; // Lấy className từ template EJS

        async function deleteVideo(namevideo, linkvideo) {
            if (confirm('Bạn có chắc chắn muốn xóa video này?')) {
                try {
                    const response = await axios.post('/delete-video', {
                        namevideo: namevideo,
                        linkvideo: linkvideo,
                        idclass: className
                    });
                    
                    if (response.data.success) {
                        // Remove the video card from the DOM
                        const videoCard = document.querySelector(`.video-card[data-id="${namevideo}"]`);
                        if (videoCard) {
                            videoCard.remove();
                        }
                        alert('Video đã được xóa thành công!');
                        // Tải lại trang sau khi xóa thành công
                window.location.reload();
                    } else {
                        alert('Có lỗi xảy ra khi xóa video. Vui lòng thử lại.');
                    }
                } catch (error) {
                    console.error('Error deleting video:', error);
                    alert('Có lỗi xảy ra khi xóa video. Vui lòng thử lại.');
                }
            }
        }
    </script>
</body>
</html>