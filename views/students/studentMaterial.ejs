<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/uploads/MC2.png" type="image/x-icon">
    <title>Tài liệu Sinh viên</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #6366F1;
            --secondary-color: #8B5CF6;
            --accent-color: #EC4899;
            --background-color: #F3F4F6;
            --text-color: #1F2937;
            --card-bg: #FFFFFF;
        }
        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--background-color);
            color: var(--text-color);
        }
        .bg-primary {
            background-color: var(--primary-color);
        }
        .bg-secondary {
            background-color: var(--secondary-color);
        }
        .text-primary {
            color: var(--primary-color);
        }
        .text-accent {
            color: var(--accent-color);
        }
        .btn-primary {
            background-color: var(--primary-color);
            color: white;
            transition: all 0.3s ease;
        }
        .btn-primary:hover {
            background-color: var(--secondary-color);
            transform: translateY(-2px);
        }
        .card {
            background-color: var(--card-bg);
            transition: all 0.3s ease;
            border-radius: 1rem;
            overflow: hidden;
        }
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }
        .gradient-bg {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
        }
    </style>
</head>
<body class="flex flex-col min-h-screen">
    <nav class="gradient-bg text-white p-4 shadow-lg">
        <div class="container mx-auto flex justify-between items-center">
            <h1 class="text-2xl font-bold flex items-center">
                <i class="fas fa-graduation-cap mr-2"></i>
                Trung tâm Tài liệu Sinh viên
            </h1>
            <a href="/admin/dashboard" class="hover:text-gray-200 transition duration-300 flex items-center">
                <i class="fas fa-home mr-2"></i>Trang chủ
            </a>
        </div>
    </nav>

    <div class="flex-grow container mx-auto px-4 py-8 flex flex-col md:flex-row">
        <!-- Phần bên trái: Danh sách tài liệu -->
        <div class="w-full md:w-2/3 pr-0 md:pr-8 mb-8 md:mb-0">
            <header class="mb-8 text-center">
                <h2 class="text-4xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-primary-color to-secondary-color">Kho Tài liệu Tiếng Anh</h2>
                <p class="text-gray-600 mt-2 text-lg">Khám phá và truy cập các tài liệu học tập chất lượng cao</p>
            </header>
            <div id="file-list" class="card p-8 text-center">
                <i class="fas fa-book-open text-6xl text-primary mb-4"></i>
                <p class="text-xl text-gray-600">Vui lòng chọn một thư mục để xem tài liệu.</p>
            </div>
        </div>

        <!-- Phần bên phải: Danh sách thư mục -->
        <div class="w-full md:w-1/3">
            <h1 class="text-3xl font-bold mb-6 text-center md:text-left">Danh sách Thư mục</h1>
            <% if (materialsArray.length > 0) { %>
                <div class="grid grid-cols-1 gap-6">
                    <% materialsArray.forEach(material => { %>
                        <div class="card shadow-lg">
                            <div class="gradient-bg text-white p-4">
                                <h3 class="text-xl font-semibold"><%= material.namedoc %></h3>
                            </div>
                            <div class="p-6">
                                <p class="text-gray-700 mb-4">
                                    <i class="fas fa-file-alt mr-2 text-accent"></i>
                                    Tổng số tài liệu: <span class="font-medium"><%= material.count %></span>
                                </p>
                                <button onclick="showFiles('<%= material.namedoc %>')" class="btn-primary w-full py-2 px-4 rounded-full shadow-md">
                                    <i class="fas fa-eye mr-2"></i>Xem tất cả tài liệu
                                </button>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <p class="text-gray-600 text-center">Không có tài liệu nào cho lớp học của bạn.</p>
            <% } %>
        </div>
    </div>

    <footer class="bg-gray-800 text-white py-6 mt-auto">
        <div class="container mx-auto text-center">
            <p>&copy; 2024 Trung tâm Tài liệu Giáo dục của Cường Nguyễn. Đã đăng ký bản quyền.</p>
        </div>
    </footer>

    <script>
        async function showFiles(namedoc) {
            console.log("Fetching files for:", namedoc);
            try {
                const response = await fetch(`/get-materials`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ namedoc }),
                });

                if (!response.ok) {
                    throw new Error('Network response was not ok ' + response.statusText);
                }

                const files = await response.json();
                console.log("Received files:", files);

                const fileList = document.getElementById('file-list');
                fileList.innerHTML = '';

                if (files.length > 0) {
                    const fileItems = files.map(file => `
                        <li class="mb-4">
                            <a href="/uploads/${file.urlmaterial.split('\\').pop()}" target="_blank" class="flex items-center p-3 bg-white rounded-lg shadow-md hover:shadow-lg transition duration-300">
                                <i class="far fa-file-pdf text-accent mr-3 text-xl"></i>
                                <span class="text-primary hover:text-secondary">${file.namematerial}</span>
                            </a>
                        </li>
                    `).join('');
                    
                    fileList.innerHTML = `
                        <h4 class="text-2xl font-bold text-primary mb-6">${namedoc}</h4>
                        <ul class="list-none text-left">${fileItems}</ul>
                    `;
                } else {
                    fileList.innerHTML = `
                        <i class="fas fa-folder-open text-5xl text-gray-400 mb-4"></i>
                        <p class="text-xl text-gray-600">Không tìm thấy tài liệu nào trong thư mục này.</p>
                    `;
                }
            } catch (error) {
                console.error('Error fetching files:', error);
                document.getElementById('file-list').innerHTML = `
                    <i class="fas fa-exclamation-triangle text-5xl text-red-500 mb-4"></i>
                    <p class="text-xl text-red-600">Có lỗi xảy ra: ${error.message}</p>
                `;
            }
        }
    </script>
</body>
</html>