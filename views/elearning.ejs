                                location.reload();
                            });
                            signaturePad.off();  // Disable canvas sau khi lưu thành công
                            this.textContent = "Sửa chữ ký";  // Đổi lại thành nút sửa
                            signaturePadCanvas.classList.remove('border-gray-300', 'border');
                            this.classList.replace('bg-green-500', 'bg-red-500');
                            toggleClearButton(false); // Ẩn nút clear sau khi lưu chữ ký
                        } else {
                            alert(result.error || 'Lỗi khi lưu chữ ký');
                        }
                    } catch (error) {
                        console.error('Lỗi khi lưu chữ ký:', error);
                        Swal.fire({
                            icon: 'error',
                            title: 'Lỗi',
                            text: 'Không thể lưu chữ ký, vui lòng thử lại!'
                        });
                    }
                });
            });
        } catch (error) {
            console.error('Lỗi khi lấy chữ ký:', error);
        }
    }
    
</script>
            
