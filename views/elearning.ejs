<script>
    async function loadSignature(idclass, iduser) {
        console.log('idclass:', idclass, 'iduser:', iduser);
    
        try {
            const response = await fetch(`/get-signature?iduser=${iduser}&idclass=${idclass}`);
            const data = await response.json();
    
            document.querySelectorAll('.tab-pane').forEach(function(tabPane) {
                const signaturePadCanvas = tabPane.querySelector('.canvas-signature');
                const signaturePad = new SignaturePad(signaturePadCanvas, {
                    backgroundColor: 'rgb(255, 255, 255)',
                    penColor: 'rgb(0, 0, 0)',
                    minWidth: 2,
                    maxWidth: 5
                });
    
                const saveButton = tabPane.querySelector('.save-signature-button');
                const clearButton = tabPane.querySelector('.clear-signature-button');
    
                // Hàm hiển thị/ẩn nút clear
                const toggleClearButton = (show) => {
                    if (show) {
                        clearButton.classList.remove('hidden');
                    } else {
                        clearButton.classList.add('hidden');
                    }
                };
    
                if (response.ok && data.signatureData) {
                    // Có chữ ký -> hiển thị chữ ký và disable canvas
                    signaturePad.fromDataURL(data.signatureData);
                    signaturePad.off(); // Disable canvas để không thể ký
                    signaturePadCanvas.classList.remove('border-gray-300', 'border');
    
                    if (saveButton) {
                        saveButton.textContent = "Sửa chữ ký";
                        saveButton.classList.replace('bg-green-500', 'bg-red-500');
                    }
    
                    toggleClearButton(false); // Ẩn nút clear khi đã có chữ ký
                } else {
                    // Chưa có chữ ký -> cho phép ký mới
                    signaturePad.on(); // Cho phép ký lại
                    signaturePadCanvas.classList.add('border-gray-300', 'border');
                    toggleClearButton(false); // Ẩn nút clear khi không có chữ ký
    
                    if (saveButton) {
                        saveButton.textContent = "Lưu chữ ký";
                        saveButton.classList.replace('bg-red-500', 'bg-green-500');
                    }
                }
    
                // Xử lý sự kiện click nút clear
                clearButton.addEventListener('click', function() {
                    signaturePad.clear();
                    toggleClearButton(true); // Giữ nút clear hiển thị trong chế độ sửa chữ ký
                });
    
                // Xử lý sự kiện click nút save/edit
                saveButton.addEventListener('click', async function() {
                    const currentMode = this.textContent.trim();
    
                    if (currentMode === "Sửa chữ ký") {
                        // Chuyển sang chế độ sửa - cho phép ký lại
                        signaturePad.clear();
                        signaturePad.on();
                        signaturePadCanvas.classList.add('border-gray-300', 'border');
                        this.textContent = "Lưu chữ ký";
                        this.classList.replace('bg-red-500', 'bg-green-500');
                        toggleClearButton(true); // Hiện nút clear khi sửa chữ ký
                        return; // Dừng ở đây, chờ người dùng ký lại
