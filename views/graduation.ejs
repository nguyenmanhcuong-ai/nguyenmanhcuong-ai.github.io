    <script>
        async function exportToPDF() {
            const { jsPDF } = window.jspdf;
            const certificate = document.getElementById('certificate');
            
            try {
                const canvas = await html2canvas(certificate, {
                    scale: 2,
                    useCORS: true,
                    logging: false
                });

                const pdf = new jsPDF('p', 'mm', 'a4');
                const imgWidth = 210;
                const imgHeight = canvas.height * imgWidth / canvas.width;
                
                pdf.addImage(
                    canvas.toDataURL('image/jpeg', 1.0),
                    'JPEG',
                    0,
                    0,
                    imgWidth,
                    imgHeight
                );

                pdf.save('chung-nhan-tot-nghiep_<%= student.fullname %>_<%=student.iduser%>_<%=className%>.pdf');
            } catch (error) {
                console.error('Lỗi khi xuất PDF:', error);
                alert('Có lỗi xảy ra khi xuất PDF. Vui lòng thử lại.');
            }
        }
        

        let isEditMode = false;

        function toggleEditMode() {
            isEditMode = !isEditMode;
            const editButton = document.querySelector('.edit-button');
            const saveButton = document.querySelector('.save-button');
            
            // Toggle buttons visibility
            editButton.style.display = isEditMode ? 'none' : 'inline-block';
            saveButton.style.display = isEditMode ? 'inline-block' : 'none';
        
                // Toggle graduation status edit
    const graduationStatus = document.querySelector('.graduation-status');
    if (isEditMode) {
        const isGraduated = graduationStatus.textContent.trim() === 'ĐÃ TỐT NGHIỆP';
        graduationStatus.innerHTML = `
            <select class="edit-input graduation-select">
                <option value="true" ${isGraduated ? 'selected' : ''}>ĐÃ TỐT NGHIỆP</option>
                <option value="false" ${!isGraduated ? 'selected' : ''}>CHƯA TỐT NGHIỆP</option>
            </select>
        `;
    } else {
        const select = graduationStatus.querySelector('select');
        if (select) {
            const value = select.value === 'true' ? 'ĐÃ TỐT NGHIỆP' : 'CHƯA TỐT NGHIỆP';
            graduationStatus.textContent = value;
            // Cập nhật giá trị graduation.isgraduation
            // Bạn có thể thêm code để lưu giá trị này vào database ở đây
        }
    }

            
            // Make rank editable
            const rankSpan = document.querySelector('.highlight1');
            if (isEditMode) {
                const currentRank = rankSpan.textContent.replace('Xếp loại: ', '').trim();
                rankSpan.innerHTML = `Xếp loại: <input type="text" class="edit-input" value="${currentRank}">`;
            } else {
                const input = rankSpan.querySelector('input');
                if (input) {
                    rankSpan.textContent = `Xếp loại: ${input.value}`;
                }
            }
        
            // Make evaluations editable
            const evaluationItems = document.querySelectorAll('.evaluation-item');
            evaluationItems.forEach((item, index) => {
                const evaluationNumber = index + 1;
                if (isEditMode) {
                    const currentEval = item.textContent.replace(`Tháng ${evaluationNumber}:`, '').trim();
                    const inputHTML = `
                        <strong>Tháng ${evaluationNumber}:</strong>
                        <input type="text" 
                            class="edit-input"
                            data-evaluation="${evaluationNumber}"
                            value="${currentEval === 'Chưa có đánh giá' ? '' : currentEval}"
                            style="margin-left: 5px;"
                        >
                    `;
                    item.innerHTML = inputHTML;
                    
                    // Thêm event listener cho input
                    const input = item.querySelector('input');
                    input.addEventListener('click', (e) => {
                        e.stopPropagation(); // Ngăn chặn sự kiện click từ việc lan truyền
                    });
                } else {
                    const input = item.querySelector('input');
                    if (input) {
                        const value = input.value || 'Chưa có đánh giá';
                        item.innerHTML = `<strong>Đánh giá ${evaluationNumber}:</strong> ${value}`;
                    }
                }
            });
        }        // Function to get idclass from URL
function getIdClassFromURL() {
    const url = window.location.href;
    const parts = url.split('/');
    return parts[parts.length - 1]; // Lấy phần cuối cùng của URL làm idclass
}

async function saveChanges() {
    try {
        // Hiện dialog xác nhận trước khi lưu
        const confirmResult = await Swal.fire({
            title: 'Xác nhận lưu thay đổi',
            text: 'Bạn có chắc chắn muốn lưu các thông tin này?',
            icon: 'question',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Đồng ý',
            cancelButtonText: 'Hủy'
        });

        // Nếu người dùng không xác nhận, dừng lại
        if (!confirmResult.isConfirmed) {
            return;
        }

        // Collect all the edited data
        const rankInput = document.querySelector('.highlight1 input');
        const rank = rankInput ? rankInput.value : '';
        const evaluations = {};
        
        document.querySelectorAll('.evaluation-item input').forEach((input, index) => {
            evaluations[`evaluation${index + 1}`] = input.value || null;
        });

        // Get graduation status value
        const graduationSelect = document.querySelector('.graduation-select');
        const isGraduation = graduationSelect ? graduationSelect.value === 'true' : false;

        // Get idclass from URL
        const idclass = getIdClassFromURL();

        // Prepare the data
        const updateData = {
            idclass: idclass,
            iduser: '<%= student.iduser %>',
            rank: rank,
            isgraduation: isGraduation,
            ...evaluations
        };
        
        console.log('Data to update:', updateData);

        // Hiển thị loading spinner
        Swal.fire({
            title: 'Đang xử lý',
            html: 'Vui lòng chờ trong giây lát...',
            allowOutsideClick: false,
            didOpen: () => {
                Swal.showLoading();
            }
        });

        // Send request to backend
        const response = await fetch('/api/update-graduation', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify(updateData)
        });

        const result = await response.json();

        if (!result.success) {
            throw new Error(result.message);
        }

        // Hiển thị thông báo thành công
        await Swal.fire({
            title: 'Thành công!',
            text: 'Cập nhật thông tin thành công',
            icon: 'success',
            confirmButtonText: 'Đóng'
        });

        toggleEditMode();
        location.reload();

    } catch (error) {
        console.error('Error saving changes:', error);
        
        // Hiển thị thông báo lỗi
        await Swal.fire({
            title: 'Lỗi!',
            text: 'Có lỗi xảy ra khi lưu thay đổi: ' + error.message,
            icon: 'error',
            confirmButtonText: 'Đóng'
        });
    }
}

function getIdClassFromURL1() {
    const pathParts = window.location.pathname.split('/');
